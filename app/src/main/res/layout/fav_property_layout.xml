<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.chauthai.swipereveallayout.SwipeRevealLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dragEdge="right"
        app:mode="same_level">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#fff">



        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardUseCompatPadding="true"
                    android:id="@+id/filtered_propert_card"
                    app:cardBackgroundColor="@color/nav_header_background">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.40">


                            <ImageView
                                android:id="@+id/search_propert_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"/>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:paddingRight="5dip"
                            android:gravity="center"

                            android:layout_height="match_parent"
                            android:layout_weight="0.60"
                            android:orientation="vertical"
                            android:weightSum="5"

                            android:paddingLeft="5dp">

                            <LinearLayout
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="1"
                                >

                                <ImageView
                                    android:id="@+id/delete_fav_item"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|top"
                                    android:src="@drawable/ic_cancel"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="1"
                                >

                                <TextView
                                    android:text="dfasdfas"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:textAppearance="@style/TextAppearance.FontPath"
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/c_Propertname"
                                    android:textColor="#000"
                                    android:singleLine="true"/>


                            </LinearLayout>
                            <!--     <TextView
                                     android:text="sector 75"
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:id="@+id/c_Propertid"
                                     android:textColor="#000"/>
             -->
                            <TextView
                                android:text="2bhk apartment"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:textAppearance="@style/TextAppearance.FontPath"
                                android:id="@+id/c_Propertstate"
                                android:textColor="#000"

                                />
                            <TextView
                                android:text="Vatika"
                                android:textAppearance="@style/TextAppearance.FontPath"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/locality"
                                android:gravity="center|left"
                                android:singleLine="true"
                                android:textColor="#000"

                                />
                            <TextView
                                android:text="1150 sq. ft."
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:textAppearance="@style/TextAppearance.FontPath"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/c_Propertcity"
                                android:textColor="#000"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="1"

                                >

                                <TextView
                                    android:id="@+id/adapter_price"
                                    android:gravity="center|left"
                                    android:textColor="#000"
                                    android:layout_weight=".80"
                                    android:textStyle="bold"
                                    android:layout_width="0dip"
                                    android:textAppearance="@style/TextAppearance.FontPath"

                                    android:layout_height="wrap_content"
                                    android:text="\u20B9 - Lakh"/>

                                <ImageView
                                    android:id="@+id/plist_callbtn"
                                    android:layout_width="0dip"
                                    android:layout_weight=".20"
                                    android:gravity="right|top"
android:visibility="gone"
                                    android:layout_height="match_parent"

                                    android:src="@drawable/ic_detailscallbtn"/>
                            </LinearLayout>

                        </LinearLayout>



                    </LinearLayout>




                </android.support.v7.widget.CardView>

            </LinearLayout>



        </FrameLayout>

        </com.chauthai.swipereveallayout.SwipeRevealLayout>


</LinearLayout>