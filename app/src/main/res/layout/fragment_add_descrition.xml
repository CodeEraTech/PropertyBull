<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout_company_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="visible"
                app:cardCornerRadius="2dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1.5">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="0.50"
                            android:background="@drawable/edittext_bg"
                            android:gravity="center_vertical"
                            android:textAppearance="@style/TextAppearance.FontPath">

                            <EditText
                                android:id="@+id/p4_price"


                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="#fff"
                                android:hint="Area"
                                android:inputType="number"


                                android:maxLength="5"
                                android:paddingLeft="5dip"
                                android:paddingRight="5dp"
                                android:textAppearance="@style/TextAppearance.FontPath" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="0.50"
                            android:background="@drawable/edittext_bg"

                            android:gravity="center_vertical"
                            android:textAppearance="@style/TextAppearance.FontPath">


                            <Spinner
                                android:id="@+id/unit_spiner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:background="#ffffff"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dip"

                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="0.50"
                            android:background="@drawable/edittext_bg"

                            android:gravity="center_vertical"
                            android:textAppearance="@style/TextAppearance.FontPath">

                            <EditText
                                android:id="@+id/p4_unit"

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:layout_weight="1"
                                android:background="#ffffff"
                                android:hint="Unit Price"
                                android:inputType="number"
                                android:maxLength="6"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dip"

                                android:textAppearance="@style/TextAppearance.FontPath" />

                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/p4_totalprice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="Total"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:textColor="#000" />

                    <EditText
                        android:id="@+id/p4_depositedt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:hint="Deposit Price"
                        android:inputType="number"
                        android:paddingLeft="5dp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/p4_discription"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:background="@drawable/edittext_bg"
                        android:gravity="top"
                        android:hint="Description"
                        android:inputType="textMultiLine"
                        android:lines="10"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textAppearance="@style/TextAppearance.FontPath" />

                    <LinearLayout
                        android:id="@+id/images"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="4"
                        android:orientation="vertical"
                        android:weightSum="1">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dip"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/reyclerimagelist"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:scrollbars="none"
                                    android:visibility="gone"></android.support.v7.widget.RecyclerView>

                                <TextView
                                    android:id="@+id/noimagetext"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:paddingLeft="20dip"
                                    android:text="Select Property Pictures"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="18sp"
                                    android:textStyle="italic"
                                    android:visibility="visible" />

                                <Button
                                    android:id="@+id/p4_post_image"
                                    android:layout_width="40dip"
                                    android:layout_height="40dip"
                                    android:layout_gravity="right|top"
                                    android:background="@drawable/ic_camera" />

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <ProgressBar
                            android:id="@+id/pb_save_company"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/p4_post_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/button_color"
                            android:text="Post"
                            android:textAppearance="@style/TextAppearance.FontPath"
                            android:textColor="#fff" />

                    </RelativeLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </ScrollView>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
