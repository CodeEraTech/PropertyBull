<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_login_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:background="@drawable/splash_screen_background" />
    -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp">

            <ProgressBar
                android:id="@+id/login_progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <ScrollView
                android:id="@+id/login_form"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical"
                    android:padding="9dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="92dp"
                        android:layout_gravity="center"
                        android:background="@drawable/logo_logo"
                        android:scaleX="1"
                        android:scaleY="1.3"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/project_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/app_name"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:visibility="gone" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edtName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="22dp"
                            android:layout_marginRight="35dp"
                            android:background="#0000"
                            android:hint="Name"
                            android:inputType="text"
                            android:padding="16dp"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="16dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:background="@color/black" />

                        <EditText
                            android:id="@+id/edtEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="22dp"
                            android:layout_marginRight="35dp"
                            android:background="#0000"
                            android:hint="Email"
                            android:inputType="text"
                            android:padding="16dp"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="16dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:background="@color/black" />


                        <Spinner
                            android:id="@+id/spSelctType"
                            style="@style/Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="35dp"
                            android:layout_marginRight="35dp"
                            android:hint="Year"
                            android:spinnerMode="dialog"
                            android:textColorHint="#0e0e0e" />

                        <EditText
                            android:id="@+id/edtPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="22dp"
                            android:layout_marginRight="35dp"
                            android:background="#0000"
                            android:hint="Mob No."
                            android:inputType="number"
                            android:maxLength="10"
                            android:padding="16dp"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="14dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:background="@color/black" />

                        <EditText
                            android:id="@+id/edtPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="22dp"
                            android:layout_marginRight="35dp"
                            android:background="#0000"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:padding="16dp"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="16dp"
                            android:visibility="visible" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:background="@color/black" />

                        <EditText

                            android:id="@+id/edtConfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="22dp"
                            android:layout_marginRight="35dp"
                            android:background="#0000"
                            android:hint="Confirm Password"
                            android:inputType="textPassword"
                            android:padding="16dp"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="16dp"
                            android:visibility="visible" />


                        <View

                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:background="@color/black"
                            android:visibility="visible" />


                        <LinearLayout
                            android:id="@+id/linear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/terms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:fontFamily="sans-serif-condensed"
                                android:gravity="center"
                                android:text="Terms And Conditions"
                                android:textColor="@color/colorPrimary"
                                android:textColorHint="@color/colorPrimary"
                                android:textSize="16dp"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="22dp"
                                android:layout_marginRight="35dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <CheckBox
                                    android:id="@+id/reg_accept_checkbox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="I accept the " />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tnc_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:text="@string/tc"
                                        android:textColor="@color/colorPrimary" />

                                    <View
                                        android:layout_width="140dp"
                                        android:layout_height="0.6dp"
                                        android:background="#000" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ProgressBar
                                android:id="@+id/pb_signup"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:visibility="gone" />

                            <Button
                                android:id="@+id/btnSignUp"
                                style="@style/Widget.AppCompat.Button.Colored"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="40dp"
                                android:layout_marginRight="40dp"
                                android:layout_marginBottom="28dp"
                                android:backgroundTint="@color/colorPrimary"
                                android:gravity="center"
                                android:padding="16dp"
                                android:text="Create Account"
                                android:textColor="#fff"
                                android:textSize="16dp" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.80">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:weightSum="6">


                    <EditText
                        android:id="@+id/reg_firstname"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_bg_dark"
                        android:hint="Name"
                        android:paddingLeft="20dp"
                        android:singleLine="true"
                        android:textAppearance="@style/TextAppearance.FontPath" />


                    <EditText
                        android:id="@+id/reg_lastname"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_bg_dark"
                        android:hint="Last name"
                        android:paddingLeft="20dp"
                        android:singleLine="true"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:visibility="gone" />


                    <EditText
                        android:id="@+id/reg_email"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_bg_dark"
                        android:hint="Email"
                        android:inputType="textWebEmailAddress"
                        android:paddingLeft="20dp"
                        android:singleLine="true"
                        android:textAppearance="@style/TextAppearance.FontPath" />


                    <EditText
                        android:id="@+id/regmobile"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_bg_dark"
                        android:hint="Mobile"
                        android:inputType="phone"
                        android:paddingLeft="20dp"
                        android:singleLine="true"

                        android:textAppearance="@style/TextAppearance.FontPath" />


                    <EditText
                        android:id="@+id/reg_landline"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_bg_dark"
                        android:hint="Landline"
                        android:paddingLeft="20dp"
                        android:singleLine="true"
                        android:textAppearance="@style/TextAppearance.FontPath" />


                    <AutoCompleteTextView
                        android:id="@+id/reg_city"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_bg_dark"
                        android:hint="Choose City"
                        android:paddingLeft="20dp"
                        android:singleLine="true"
                        android:textAppearance="@style/TextAppearance.FontPath" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.20"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.60"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I accept the" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/tc"
                        android:textColor="@color/button_color" />

                </LinearLayout>

                <Button
                    android:id="@+id/reg_create_account_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="4dp"
                    android:layout_weight="0.40"
                    android:background="@color/register_btn_color"
                    android:padding="2dp"
                    android:text="Create Account"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:textColor="#fff"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>

