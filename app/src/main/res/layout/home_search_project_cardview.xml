<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/filtered_propert_card"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/nav_header_background"
            app:cardUseCompatPadding="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.50">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/search_propert_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/no_image" />

                        <include layout="@layout/dialog"></include>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.50"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dip"
                    android:weightSum="6">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/c_Propertname"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight=".80"
                            android:gravity="center|left"
                            android:singleLine="true"
                            android:textAppearance="@style/TextAppearance.FontPath"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <ImageView


                            android:id="@+id/favstar"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight=".20"
                            android:gravity="top|right"
                            android:src="@drawable/fav_star"

                            />
                    </LinearLayout>

                    <TextView

                        android:id="@+id/c_Propertid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:singleLine="true"
                        android:text="2bhk apartment"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:textColor="#000"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/c_Propertstate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:singleLine="true"
                        android:text="2bhk apartment"
                        android:textAppearance="@style/TextAppearance.FontPath"

                        />

                    <TextView
                        android:id="@+id/locality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="Vatika"
                        android:textAppearance="@style/TextAppearance.FontPath"

                        />

                    <TextView
                        android:id="@+id/c_Propertcity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="1150 sq. ft."
                        android:textAppearance="@style/TextAppearance.FontPath" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"

                        android:weightSum="1"

                        >

                        <TextView
                            android:id="@+id/adapter_price"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight=".80"
                            android:gravity="center|left"
                            android:text="\u20B9 - Lakh"
                            android:textAppearance="@style/TextAppearance.FontPath"

                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/plist_callbtn"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight=".20"
                            android:gravity="right|center"
                            android:src="@drawable/ic_detailscallbtn"

                            android:visibility="gone" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>