<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="0.5"
        android:foregroundTint="@color/button_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/contact_form_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Register For Home Loan"
                android:textColor="@color/button_color"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="serif" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="8.4"
        android:orientation="vertical"
        android:padding="5dp"
        android:scrollbars="none"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Employment Type"
                    android:textColor="@color/black"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/saleriedRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimary"
                        android:checked="true"

                        android:paddingRight="50dp"
                        android:text="Salaried"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/selfRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimary"

                        android:text="Self Employed"
                        android:textColor="@color/black" />
                </RadioGroup>
            </LinearLayout>

            <EditText
                android:id="@+id/loanPersonName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/button_color"
                android:drawableLeft="@drawable/ic_person_black_24dp"

                android:hint="Name"
                android:inputType="textEmailAddress"
                android:textColor="@color/button_color" />

            <EditText
                android:id="@+id/loanPersonMob"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/button_color"
                android:drawableLeft="@drawable/ic_phone_android_black_24dp"

                android:hint="Mobile"
                android:inputType="phone"
                android:maxLength="10"
                android:textColor="@color/button_color" />

            <EditText
                android:id="@+id/loanPersonEmail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/button_color"
                android:drawableLeft="@drawable/ic_email_black_24dp"

                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/button_color" />

            <EditText
                android:id="@+id/loanPersonAddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/button_color"
                android:drawableLeft="@drawable/ic_add_location_black_24dp"

                android:hint="Where You From..?"
                android:inputType="textEmailAddress"
                android:textColor="@color/button_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Select Loan Type"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <Spinner
                    android:id="@+id/personLoanType"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:inputType="textPersonName"
                    android:textColor="@color/button_color" />

            </LinearLayout>


            <EditText
                android:id="@+id/personDob"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_color"
                android:drawableLeft="@drawable/ic_perm_contact_calendar_black_24dp"
                android:focusable="false"

                android:hint="Select D.O.B"
                android:inputType="text"
                android:textColor="@color/button_color" />

            <EditText
                android:id="@+id/personIncome"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_color"
                android:drawableLeft="@drawable/ic_style_black_24dp"

                android:hint="Gross Fixed Monthly Income"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/button_color" />

            <EditText
                android:id="@+id/personTotalIncome"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_color"
                android:drawableLeft="@drawable/ic_style_black_24dp"

                android:hint="Monthly Take Home Income"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/button_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="end">

                    <CheckBox
                        android:id="@+id/checkboxterm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        android:checked="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center|left">

                    <TextView
                        android:id="@+id/termsandcondloan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="I Agree To Terms and Condition."
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="Register"
                    android:textAllCaps="false"
                    android:textColor="@color/lightWhite"
                    android:textSize="14sp" />
                />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>