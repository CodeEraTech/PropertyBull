<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        android:id="@+id/filtered_propert_card"
        app:cardBackgroundColor="@color/nav_header_background">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"

                    android:layout_height="match_parent"
                    android:layout_weight="0.40">
                    <ImageView
                        android:id="@+id/search_propert_image"
                        android:layout_width="match_parent"

                        android:scaleType="fitXY"
                        android:layout_height="match_parent" />
                    <TextView
                        android:visibility="visible"
                        android:id="@+id/statusimage"
                        android:layout_gravity="top|left"
                        android:layout_width="wrap_content"
                        android:background="@android:color/holo_red_dark"
                        android:layout_marginTop="30dip"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dip"
                       android:rotation="-43"
                        android:text="Upapproved"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:textColor="@android:color/white"
                        android:layout_height="wrap_content" />


                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:background="#ffffff"
                    android:paddingTop="5dip"
                    android:layout_width="0dp"
                        android:layout_height="match_parent"
                    android:layout_weight="0.60"
                    android:orientation="vertical"
                    android:weightSum="6"
                    android:paddingBottom="5dip"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:paddingLeft="5dp">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        >

                        <TextView
                            android:text="dfasdfas"
                            android:layout_weight=".80"
                            android:gravity="center|left"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:id="@+id/c_Propertname"
                            android:textColor="#000"
                            android:textAppearance="@style/TextAppearance.FontPath"
                            android:textSize="19dp"
                            android:singleLine="true"/>

                    </LinearLayout>
              <TextView
                  android:text="2bhk apartment"
                  android:layout_weight="1"
                  android:gravity="left|center"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:singleLine="true"
                  android:textAppearance="@style/TextAppearance.FontPath"
                  android:id="@+id/c_Propertid"
                  android:textColor="#000"/>

                    <TextView
                        android:text="2bhk apartment"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:id="@+id/c_Propertstate"
                        android:textColor="#000"

                        />
                    <TextView
                        android:text="Vatika"
android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/locality"
                        android:gravity="center|left"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:singleLine="true"
                        android:textColor="#000"

                        />
                    <TextView
                        android:text="1150 sq. ft."
android:layout_weight="1"
                        android:gravity="center|left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:id="@+id/c_Propertcity"
                        android:textColor="#000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"

                        >

                        <TextView
                            android:id="@+id/adapter_price"
                            android:gravity="center|left"
                            android:textColor="#000"
                            android:layout_weight=".80"
                            android:textStyle="bold"
                            android:layout_width="0dip"
                            android:textAppearance="@style/TextAppearance.FontPath"
                            android:layout_height="wrap_content"
                            android:text="\u20B9 - Lakh"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/plist_callbtn"
                            android:layout_width="0dip"
                            android:layout_weight=".20"
                            android:gravity="right|top"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_detailscallbtn"/>
                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

        <ImageView
            android:id="@+id/delete_fav_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:src="@drawable/ic_cancel"/>


    </android.support.v7.widget.CardView>

</LinearLayout>
</LinearLayout>