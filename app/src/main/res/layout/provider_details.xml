<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.doomshell.property_bull.Service_provider_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/overcard_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/deatails_loveastro_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/no_image"
                    android:scaleType="fitXY"/>
                <ProgressBar
                    android:id="@+id/recent_img_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#8f000000"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:id="@+id/deatail_Loveastro_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:text="fdgfgdfgdgd"
                        android:gravity="center"
                        android:textColor="#fff"

                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"/>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="5dip"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight=".4"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:gravity="center|left"
                    android:textColor="@color/button_color"
                    android:text="Contact Name"

                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    />

        <TextView
            android:layout_weight=".6"
            android:id="@+id/name"
            android:gravity="center|left"
            android:textColor="#000000"
            android:textAppearance="@style/TextAppearance.FontPath"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            />
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="5dip"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight=".4"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:gravity="center|left"
                    android:textColor="@color/button_color"
                    android:text="Mobile No."

                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    />
        <TextView
android:layout_weight=".6"
            android:id="@+id/mobile"
            android:gravity="center|left"
            android:textAppearance="@style/TextAppearance.FontPath"
            android:textColor="#000000"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dip"
                    android:weightSum="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight=".4"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:gravity="center|left"
                        android:textColor="@color/button_color"
                        android:text="Email Address"

                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:layout_weight=".6"
                        android:id="@+id/email"
                        android:gravity="center|left"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:textColor="#000000"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dip"
                    android:weightSum="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight=".4"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:gravity="center|left"
                        android:textColor="@color/button_color"
                        android:text="Address"

                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:layout_weight=".6"
                        android:id="@+id/address"
                        android:gravity="center|left"

                        android:textColor="#000000"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dip"
                    android:weightSum="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight=".4"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:gravity="center|left"
                        android:textColor="@color/button_color"
                        android:text="Website"

                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:layout_weight=".6"
                        android:id="@+id/url"
                        android:gravity="center|left"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:textColor="#000000"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

        <TextView
            android:padding="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.FontPath"
            android:textColor="#000000"


            android:text="@string/about"/>



            <TextView
                android:padding="5dip"
                android:textColor="#000000"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:id="@+id/detail_loveastro_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>


    </LinearLayout>
</FrameLayout>
