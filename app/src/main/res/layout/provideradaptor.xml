<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardUseCompatPadding="true"
            android:id="@+id/filtered_propert_card"
            app:cardBackgroundColor="@color/nav_header_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
               >
            <LinearLayout
                android:id="@+id/rightdata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <LinearLayout
                    android:background="#ffffff"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_weight="0.40">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/search_propert_image"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"

                            />

                        <include layout="@layout/dialog"></include>

                    </RelativeLayout>

                </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="10dip"
        android:paddingRight="10dip"
        android:background="#ffffff"
        android:layout_width="0dp"

        android:layout_weight=".60">

        <TextView
            android:id="@+id/companyname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="10dip"
            android:paddingTop="10dip"
            android:paddingBottom="5dip"
            android:background="#ffffff"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.FontPath"
            android:text="Archict"


            android:textColor="#000000"/>
        <TextView
            android:id="@+id/contactperson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="10dip"

            android:paddingBottom="5dip"

            android:background="#ffffff"

            android:textAppearance="@style/TextAppearance.FontPath"
            android:text="contact person"

            android:textColor="#000000"/>
        <TextView
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="10dip"

            android:paddingBottom="5dip"

            android:background="#ffffff"

            android:textAppearance="@style/TextAppearance.FontPath"
            android:text="mobile"

            android:textColor="#000000"/>
        <TextView
            android:id="@+id/emailid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="10dip"

            android:paddingBottom="5dip"
                 android:background="#ffffff"

            android:textAppearance="@style/TextAppearance.FontPath"
            android:text="email id"

            android:textColor="#000000"/>
        <TextView
            android:id="@+id/adress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="10dip"

            android:paddingBottom="5dip"
            android:background="#ffffff"

            android:textAppearance="@style/TextAppearance.FontPath"
            android:text="member since"

            android:textColor="#000000"/>
        <TextView
            android:id="@+id/memeber_since"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="10dip"

            android:paddingBottom="5dip"
            android:background="#ffffff"

            android:textAppearance="@style/TextAppearance.FontPath"
            android:text="member since"

            android:textColor="#000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_gravity="right|bottom"
            android:background="#ffffff"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:src="@drawable/ic_location"/>
            <ImageView
                android:id="@+id/website"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center|right"
                android:src="@drawable/ic_website"/>
            <TextView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center"
                android:layout_gravity="center|right"
                android:text="@string/more"
                android:textColor="#1234f4"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
                <TextView
                    android:visibility="gone"
                    android:paddingRight="10dip"
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="10dip"

                    android:paddingBottom="5dip"

                    android:background="#ffffff"

                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:text="bfhetjj;upuo;jk'pi[0pu'k'pi[pj';k'pupj'p[[pj''pup'k'pi[p'i[i['s"

                    android:textColor="#000000"/>
            </LinearLayout>

    </android.support.v7.widget.CardView>

        </LinearLayout>
</LinearLayout>