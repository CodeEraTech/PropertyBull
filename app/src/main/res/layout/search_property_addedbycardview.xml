<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        android:id="@+id/filtered_propert_card"
        app:cardBackgroundColor="@color/nav_header_background">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.40">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/search_propert_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/no_image"/>

                        <include layout="@layout/dialog"></include>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:paddingRight="5dip"
                    android:gravity="center|left"
                    android:layout_height="match_parent"
                    android:layout_weight="0.60"
                    android:orientation="vertical"
                    android:weightSum="7"

                    android:paddingLeft="5dp">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dip"
                        android:weightSum="1"
                        >

                        <TextView
                            android:id="@+id/c_Propertname"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight=".80"
                            android:gravity="center|left"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="19dp"
                            android:textAppearance="@style/TextAppearance.FontPath" />
                        <ImageView


                            android:gravity="top|right"
                            android:layout_weight=".20"
                            android:id="@+id/favstar"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:src="@drawable/fav_star"

                            />
                    </LinearLayout>
               <!--     <TextView
                        android:text="sector 75"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/c_Propertid"
                        android:textColor="#000"/>
-->
                    <TextView
                        android:id="@+id/c_Propertstate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:singleLine="true"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.FontPath"

                        />
                    <TextView
                        android:id="@+id/c_Propertid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:singleLine="true"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.FontPath"

                        />

                    <TextView
                        android:id="@+id/locality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="Vatika"
                        android:textAppearance="@style/TextAppearance.FontPath"

                        />

                    <TextView
                        android:id="@+id/c_Propertcity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="1150 sq. ft."
                        android:textAppearance="@style/TextAppearance.FontPath" />

                    <TextView
                        android:id="@+id/addedby"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.FontPath" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="5dip"
                        android:weightSum="1"

                        >

                        <TextView
                            android:id="@+id/adapter_price"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight=".80"
                            android:gravity="center|left"
                            android:text="\u20B9 - Lakh"
                            android:textStyle="bold"

                            android:textAppearance="@style/TextAppearance.FontPath" />
                        <ImageView
                            android:id="@+id/plist_callbtn"
                            android:layout_width="0dip"
android:layout_weight=".20"
                            android:gravity="right|top"

                            android:layout_height="match_parent"
android:visibility="gone"
                            android:src="@drawable/ic_detailscallbtn"/>
                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>




    </android.support.v7.widget.CardView>

</LinearLayout>
</LinearLayout>